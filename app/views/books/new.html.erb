<%= simple_form_for @book do |f| %>

  <%= f.input :title %>

  <%= f.simple_fields_for :author do |author_form| %>

  <fieldset>

    <legend>Author:</legend>

    <%= author_form.input :first_name %>

    <%= author_form.input :last_name %>
  </fieldset>
  <% end %>

  <%= f.input :year %>

  <%= f.input :description %>

  <%= f.association :category %>

  <%= f.button :submit %>

<% end %>
